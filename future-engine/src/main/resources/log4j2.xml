<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
  <Properties>
    <Property name="LOG_PATTERN">
      %d{HH:mm:ss.SSS} %p{length=1} [%10.10t] %20.20c{1.}: %message %equals{%mdc}{{}}{}%n%ex
    </Property>

    <Property name="LOG_LEVEL">
      ${env:LOG4J_LEVEL:-INFO}
    </Property>
  </Properties>

  <Appenders>
    <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
      <PatternLayout pattern="${LOG_PATTERN}"/>
    </Console>
  </Appenders>

  <Loggers>
    <Root level="${LOG_LEVEL}">
      <AppenderRef ref="ConsoleAppender"/>
    </Root>

    <Logger name="org.apache.kafka" level="WARN"></Logger>
    <Logger name="com.sotatek.future.usecase.LiquidationUseCase" level="INFO"></Logger>
    <Logger name="com.sotatek.future.service.PositionCalculator" level="INFO"></Logger>
    <Logger name="com.sotatek.future.service.TradingRuleService" level="INFO"></Logger>
  </Loggers>
</Configuration>