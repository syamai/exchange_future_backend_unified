{
  "name": "exchange-infra",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for Exchange platform",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy:dev": "cdk deploy --all -c env=dev --require-approval never",
    "destroy:dev": "cdk destroy --all -c env=dev --force",
    "diff": "cdk diff --all -c env=dev",
    "synth": "cdk synth -c env=dev",
    "bootstrap": "cdk bootstrap"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.120.0",
    "typescript": "~5.3.0"
  },
  "dependencies": {
    "@aws-cdk/lambda-layer-kubectl-v29": "^2.1.1",
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  }
}
